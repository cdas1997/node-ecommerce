<%-include('../Includes/Header.ejs')%>
<link rel="stylesheet" href="/CSS/productedit.css">
</head>
<body>

<%-include('../Includes/Navigation.ejs')%>
<div >
  <h1 class="text10">Hello ADMIN, You can Edit Products Here....!</h1>
</div>
<div class="container" id="form1">
 
      <form action="/postEditedValue" method="post" enctype="multipart/form-data" >
        
        <input type="hidden"  name="_csrf" value="<%=csrf_token%>">

        <div class="row">
          <div class="col-25">
              <label for="title" class="label1">Product Title</label>
          </div>
          <div class="col-75">
              <input type="text" class="input2"  placeholder="Enter Product Title" name="p_title" value="<%=data.pTitle %>"/>
          </div>
        </div>

        <div class="row">
          <div class="col-25">
              <label for="price"  class="label1">Product Price</label>
          </div>
          <div class="col-75">
              <input type="number" class="input2"  placeholder="Enter Product Price" name="p_price" value="<%=data.pPrice %>"/>
          </div>
        </div>

        <div class="row">
          <div class="col-25">
              <label for="des"  class="label1">Product Description</label>
          </div>
          <div class="col-75">
              <input type="text" class="input3" placeholder="Enter Product Description" name="p_desc"  value="<%=data.pDescription %>"/>
          </div>
        </div>

        <div class="row">
          <div class="col-25">
              <label for="img"  class="label1">Product Image</label>
          </div>
          <div class="col-75">
              <input type="file" class="input4" name="p_img" placeholder="Upload Image" value="<%=data.pImage%>"/>
              <input type="hidden" name="oldUrl" value="<%=data.pImage%>"/>
              <img class="imagesmall" src="../../<%=data.pImage%>" alt="">
          </div>
        </div>

       
       
        <div class="row">
          <input type="hidden" name="prod_id" value="<%=data._id%>">
         
        </div>
        <div class="row">
          <input type="submit"  class="input1" value="Update Product">
         
        </div>
      </form>
    </div>


<%-include('../Includes/Footer.ejs')%>






