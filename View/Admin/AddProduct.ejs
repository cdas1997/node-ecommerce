<div class="container" id="form1">
 
      <form action="/postValue" method="POST"  enctype="multipart/form-data" >

          <input type="hidden"  name="_csrf" value="<%=csrf_token%>">
      

        <div class="row">
          <div class="col-25">
              <label for="title" class="label1">Product Title</label>
          </div>
          <div class="col-75">
              <input type="text" class="input2" name="p_title" placeholder="Enter Product Title">
          </div>
        </div>

        <div class="row">
          <div class="col-25">
              <label for="price"  class="label1">Product Price</label>
          </div>
