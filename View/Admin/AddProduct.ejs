              <input type="text" class="input3" name="p_desc" placeholder="Enter Product Description">
          </div>
        </div>

        <div class="row">
          <div class="col-25">
              <label for="img"  class="label1">Product Image</label>
          </div>
          <div class="col-75">
              <input type="file" class="input3" name="p_img" placeholder="Upload Image">
          </div>
        </div>

       
       
      
        <div class="row">
          <input type="submit"  class="input1" value="Add Product">
         
        </div>
      </form>
